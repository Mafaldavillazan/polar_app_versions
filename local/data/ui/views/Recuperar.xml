<dashboard>
  <label>Recuperar</label>
  <!-- First row of a single comment -->
  <!-- Second row of 2 panels -->
  <row>
    <panel>
      <html>
      <h2>
      RECUPERAR
      </h2>
      <ul>
          <li>Visualización de los controles en la función de Recuperar</li>
      </ul>
    </html>
    </panel>
  </row>
  <row>
    <panel>
      <single>
        <title>Recuperar</title>
        <search>
          <query>source="Datos_Splunk_limpios.csv" Función=Recovery "Resultado"!="N/A"  
| eventstats max(_time) as maxtime
| where _time=maxtime 
| stats count(Subcategoría)</query>
          <earliest>0</earliest>
          <latest></latest>
        </search>
        <option name="rangeColors">["#FF3029","#FFB029","#4FCC58"]</option>
        <option name="rangeValues">[0,3,6]</option>
        <option name="colorMode">block</option>
        <option name="showTrendIndicator">1</option>
        <option name="showSparkline">1</option>
        <option name="useColors">1</option>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
        <option name="underLabel">de 6 controles</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Media de subcategorias de Recuperar</title>
        <search>
          <query>source="Datos_Splunk_limpios.csv" "Función"=Recovery
| eventstats max(_time) as maxtime
| where _time=maxtime | stats avg(Resultado) BY Categoría</query>
          <earliest>0</earliest>
          <latest></latest>
        </search>
        <option name="charting.chart">bar</option>
        <option name="charting.drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
  </row>
</dashboard>